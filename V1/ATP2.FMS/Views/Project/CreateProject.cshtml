@model ATP2.FMS.ViewModel.PostProjectModel
@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <br />
    @using (Html.BeginForm("CreateProject", "Project"))
    {
        <form class="form-horizontal">
            <br />

            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="box-shadow: 0 15px 40px rgba(80, 138, 255, 0.5);">
    <fieldset>
        <legend>Creating Job</legend>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-3 control-label">Project Name</label>
            <div class="col-lg-9">
                <input class="form-control" name="ProjectName" id="inputEmail" placeholder="e.g Design a web page for a website" type="text">
            </div>
        </div>

        <div class="form-group">
            <label for="textArea" class="col-lg-3 control-label">Description</label>
            <div class="col-lg-9">
                <textarea class="form-control" name="Description" rows="3" id="textArea" placeholder="Describe your Project"></textarea>
                <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
            </div>
        </div>
        <div class="form-group">
            @*<label for="inputEmail" class="col-lg-2 control-label">Write skills</label>
                @*<div class="col-lg-10">
                    <input class="form-control" name="SkillName" id="inputEmail" placeholder="Skills" type="text">

                </div>*@
           
            <label for="Skills" class="col-lg-3 control-label">Skills</label>
                <input type="text" class="col-lg-9 form-control" name="Skillsearch" oninput='onInput()' id="Skillsearch" placeholder="Search your Skills:" list="datalist1">
            <datalist id="datalist1">

                @foreach (var v in Model.SkillName)
                {
                    <option value='@v'>@v</option>
                }
            </datalist>
            <label for="hidden" class="col-lg-3 control-label"></label>
            <input type="text" class="col-lg-9 form-control" name="Selectskills" id="Selectskills" placeholder="Your Skills:" />
                                                                                                                                 
                    </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-lg-3 control-label">Budget</label>
                            <div class="col-lg-9">
                                <input class="form-control" name="Price" id="inputEmail" placeholder="Budget" type="text">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputName" class="col-lg-3 control-label"></label>
                            <div class="col-lg-9">
                                <input class="form-control" id="inputName1" name="StartTime" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" placeholder="Start Time">
                            </div>

                        </div>


                        <div class="form-group">
                            <label for="inputName" class="col-lg-3 control-label"></label>
                            <div class="col-lg-9">
                                <input class="form-control" id="inputName2" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="EndTime" placeholder="End Time">
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-lg-3 control-label">Member No</label>
                            <div class="col-lg-9">
                                <input class="form-control" name="Members" id="inputEmail" placeholder="Number of member" type="text">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail" class="col-lg-3 control-label">Project Sections</label>
                            <div class="col-lg-9">
                                <select id="mySelect" onchange=" myFunction() ">
                                    <option selected disabled>Choose here</option>
                                    <option value="1">1
                                    <option value="2">2
                                    <option value="3">3
                                    <option value="4">4
                                    <option value="5">5
                                    <option value="6">6
                                    <option value="7">7
                                    <option value="8">8
                                    <option value="9">9
                                </select>
                                <div id="div1"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-4 col-lg-offset-2">
                                <a href="JobHome.html">
                                    <button type="button" class="btn btn-default " onclick="">Cancel</button>
                                </a>
                            </div>
                            <div class="col-lg-3 col-lg-offset-2">
                                <a href="">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                </a>
                            </div>
                        </div>
                </fieldset>
            </div>
                <div class="col-md-3"></div>
            </div>


        </form>

    }
</div>
<script>
        function myFunction() {
            var x = document.getElementById("mySelect").value;
            document.getElementById("div1").innerHTML = "";
            for (i = 0; i < x; i++) {
                //alert("hello"+i);
                var para = document.createElement("p");
                para.id = 'text' + i;

                var node = document.createTextNode("");
                para.appendChild(node);
                var element = document.getElementById("div1");
                element.appendChild(para);
                document.getElementById("text" + i).innerHTML = "<input class='form-control' id='inputEmail' name='SectionName' placeholder='Section Name' type='text'><br/>";
            }

        }
        function onInput() {
            var parent = document.getElementById('datalist1');
            var val = document.getElementById("Skillsearch").value;
            var change = document.getElementById("Skillsearch");
            var opts = document.getElementById('datalist1').childNodes;
            var text = document.getElementById('Selectskills');
            for (var i = 0; i < opts.length; i++) {
                if (opts[i].value === val) {
                    // An item was selected from the list!
                    // yourCallbackHere()
                    //text.innerHTML = opts[i].value;
                    //alert(opts[i].value);
                    if (text.value != "")
                        text.value = text.value + "," + opts[i].value;
                    else
                        text.value = opts[i].value;
                    change.value = "";
                    parent.removeChild(opts[i]);

                    //alert();
                    break;
                }
            }
        }
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>


