@model ATP2.FMS.ViewModel.PaymentModel
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/AfterLoginOwner.cshtml";
}

<h2>Payment Info</h2>
<div class="container">
    <div class="row">
        <div class="col-md-9"></div>
        <div class="col-md-3">
            <h3>Current Balance</h3>
            <h4>@Model.Balance $</h4>
        </div>
    </div>
    <br />
    <table class="table table-striped table-hover ">
        <tbody>
            <tr>
                <td>Date</td>
                <td>Project Id</td>
                <td>Amount </td>
            </tr>
            <tr>
                <td>@DateTime.Now</td>
                <td>@Model.PostAProject.PostId</td>
                <td>@Model.PostAProject.Price $</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Panel title</h3>
                </div>
               @using (Html.BeginForm("Payments", "Owner"))
               {
                <div class="panel-body">
                    <label for="inputEmail">Paying From Balance</label>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            <input class="form-control" name="Balance" type="text">

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.UserId, new SelectList(Model.UserInfos, "UserId", "FristName"), "--Select--", new { @class = "form-control" })
                    </div>

                    @*<h4>Select Worker:</h4>
                   
                        @for (int i = 0; i < @Model.Name.Count; i++)
                        {
                            <select class="selectpicker">
                                <option>@Model.Name[i] </option>                   
                            </select>
                            

                        }*@
                    <input type="hidden" name="PostId" value="@Model.PostId"/>
                    <h3>Paying Now: 30 $</h3>
                    <input type="submit" value="Pay Now" class="btn btn-info" />
                    &nbsp <a href="@Url.Action("Profile","Owner")" class="btn btn-default">Finish</a>
                </div>
               }
              
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>




