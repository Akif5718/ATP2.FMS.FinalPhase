@using ATP2.FMS.Web.Framework
@model FMS.Core.Entities.WorkerInfo
@{
    ViewBag.Title = "WorkerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm("WorkerForm", "User"))
    {
        <div class="row">

            <div class="col-md-3"></div>
            <div class="col-md-4">


                <form class="form-horizontal">
                    <fieldset>
                        <i><h3 align="center">LanceBucket</h3></i>
                        <hr />
                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-4 control-label"></label>*@
                            <div class="col-lg-8">
                                <input class="form-control" name="UserId" value="@HttpUtil.CurrentUser.UserId" id="inputUserName" placeholder="Id" type="hidden">
                            </div>
                        </div>

                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-4 control-label">Earned Money</label>*@
                            <div class="col-lg-12">
                                <input class="form-control" name="EarnedMoney" id="inputUserName" placeholder="Earned Money" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-4 control-label">Rate Per Hour</label>*@
                            <div class="col-lg-12">
                                <input class="form-control" name="RatePerHour" id="inputUserName" placeholder="Rate Per Hour" type=" text">
                            </div>
                        </div>






                        <div class="form-group">
                            <div class=" col-lg-12">
                                <input type="submit" value=" Submit  " class="btn btn-default btn-block" />
                            </div>
                        </div>
                     
                    </fieldset>
                </form>
                <hr>
                Already a Lance Bucket.com member?@Html.ActionLink("Login", "Login", "LogIn")
            </div>


            <div class="col-md-4"></div>
        </div>

    }
</div>




