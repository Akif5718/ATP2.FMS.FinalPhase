@using ATP2.FMS.Web.Framework
@model FMS.Core.Entities.OwnerInfo
@{
    ViewBag.Title = "OwnerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <br />
    <br />
    @using (Html.BeginForm("OwnerForm", "User"))
    {
        <div class="row">

            <div class="col-md-3"></div>
            <div class="col-md-4">


                <form class="form-horizontal">
                    <fieldset>
                        <i><h3 align="center">LanceBucket</h3></i>
                        <hr />

                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-5 control-label"></label>*@
                            <div class="col-lg-7">
                                <input class="form-control" name="UserId" value="@HttpUtil.CurrentUser.UserId" id="inputUserName" placeholder="Id" type="hidden">
                            </div>
                        </div>
                        <div class="form-group">
                           @* <label for="inputUserName" class="col-lg-5 control-label">Company Name</label>*@
                            <div class="col-lg-7">
                                <input class="form-control" name="CompanyName" id="inputUserName" placeholder="Company Name" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-5 control-label">Company Address</label>*@
                            <div class="col-lg-7">
                                <input class="form-control" name="CompanyAddress" id="inputUserName" placeholder="Company Address" type=" text">
                            </div>
                        </div>



                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-5 control-label">Company Code</label>*@
                            <div class="col-lg-7">
                                <input class="form-control" name="CompanyCode" id="inputUserName" placeholder="CompanyCode" type=" text">
                            </div>
                        </div>



                        <div class="form-group">
                            @*<label for="inputUserName" class="col-lg-5 control-label">Position</label>*@
                            <div class="col-lg-7">
                                <input class="form-control" name="Position" id="inputUserName" placeholder="Position" type=" text">
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-lg-9">
                                <input type="submit" value=" Submit  " class="btn btn-default btn-block" />
                            </div>
                        </div>

                    </fieldset>
                </form>
                <hr>
                Already a Lance Bucket.com member?
            </div>


            <div class="col-md-4"></div>
        </div>
    }

</div>




<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>


