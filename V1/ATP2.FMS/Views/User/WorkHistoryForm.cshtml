@model FMS.Core.Entities.WorkHistory
@{
    ViewBag.Title = "WorkHistoryForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <br />
    <br />
    @using (Html.BeginForm("WorkHistoryForm", "User"))
    {
        <div class="row">

            <div class="col-md-3"></div>
            <div class="col-md-4">


                <form class="form-horizontal">
                    <fieldset>
                        <i><h3 align="center">LanceBucket</h3></i>
                        <hr />
                        <div class="form-group">
                            <label for="inputUserName" class="col-lg-4 control-label">UserId</label>
                            <div class="col-lg-8">
                                <input class="form-control" name="UserId" id="inputUserName" placeholder="Id" type="text">
                                @Html.ValidationMessageFor(m => m.UserId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputUserName" class="col-lg-4 control-label">CompanyName</label>
                            <div class="col-lg-8">
                                <input class="form-control" name="CompanyName" id="inputUserName" placeholder="Company Name" type="text">
                                @Html.ValidationMessageFor(m => m.CompanyName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputUserName" class="col-lg-4 control-label">Position</label>
                            <div class="col-lg-8">
                                <input class="form-control" name="Position" id="inputUserName" placeholder="Position" type=" text">
                                @Html.ValidationMessageFor(m => m.Position)
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="inputUserName" class="col-lg-4 control-label">Experience</label>
                            <div class="col-lg-8">
                                <input class="form-control" name="Experience" id="inputUserName" placeholder="Experience" type=" text">
                                @Html.ValidationMessageFor(m => m.Experience)
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-9">
                                <input type="submit" value=" Submit  " class="btn btn-default btn-block" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div align="right">

                                <button type="reset" class="btn btn-primary">Next</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <hr>
                Already a Lance Bucket.com member?@Html.ActionLink("Login", "Login", "LogIn")
            </div>


            <div class="col-md-4"></div>
        </div>

    }

</div>




<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

